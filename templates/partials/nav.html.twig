<div class="flex-shrink-0 p-3 bg-white" style="width: 280px;">
    <a href="/" class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom">
        <svg class="bi pe-none me-2" width="30" height="24"><use xlink:href="#bootstrap"/></svg>
        <span class="fs-5 fw-semibold">{{ 'Menu'|trans }}</span>
    </a>
    <ul class="list-unstyled ps-0">
        {% for category in categories %}
            <li class="mb-1">
                {% if category.children is not empty %}
                    <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed" data-bs-toggle="collapse"
                            data-bs-target="#category-collapse-{{ category.id }}" aria-expanded="false">
                        {{ category.title }}
                    </button>
                <div class="collapse" id="category-collapse-{{ category.id }}">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                        {% for children in category.children %}
                            <li><a href="{{ path('app_item', { category: children.id }) }}" class="link-dark d-inline-flex text-decoration-none rounded">{{ children.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </li>
                {% endif %}
        {% endfor %}
    </ul>
</div>