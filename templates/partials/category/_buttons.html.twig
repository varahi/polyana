<uL class="button-list">
    <li class="">
        {% if category is not null %}
            <a class="btn btn-list {% if locationId is null %} btn-list-active {% endif %}"
               href="{{ path('app_item_list', { slug: category.slug}) }}" role="button">
                {{ 'All'|trans }} {{ category.subtitle }}
            </a>
        {% else %}
{#            <a class="btn btn-list"
               href="" role="button">
                {{ 'All'|trans }} {{ category.subtitle }}
            </a>#}
        {% endif %}

    </li>
    {% for location in locations %}
        <li class="">
            {% if category is not null %}
                <a class="btn btn-list {% if location.id == locationId %} btn-list-active {% endif %}"
                   href="{{ path('app_item_location_list', { slug: location.slug, category: category.id}) }}" role="button">
                    {{ location.title }}
                </a>
             {% else %}
{#                 <a class="btn btn-list {% if location.id == locationId %} btn-list-active {% endif %}"
                    href="{{ path('app_item_location_list', { slug: location.slug}) }}" role="button">
                     {{ location.title }}
                 </a>#}
            {% endif %}
        </li>
    {% endfor %}
</uL>